                                <Label Text="Student Information" TextColor="#616161" FontSize="14" VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <Image
x:Name="ExpandIcon"
Grid.Column="1"
Source="arrow_down.png"
HeightRequest="16"
WidthRequest="16"
Margin="0,0,10,0"
VerticalOptions="Center"
Rotation="0"
                         
                            />
