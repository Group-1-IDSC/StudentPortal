<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoginForm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LoginForm"
    Shell.FlyoutBehavior="Flyout"
    Title="LoginForm"
    Shell.TabBarIsVisible="False">

    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Image Source="dotnet_bot.png" WidthRequest="100"></Image>
            <Label Text="Flyout Header" HorizontalTextAlignment="Center"></Label>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
     Title="Dasboard"
     ContentTemplate="{DataTemplate local:DashboardPage}"
     Route="TestPage" 
         Icon="dotnet_bot.png"/>
        <ShellContent
     Title="Assessment"
     ContentTemplate="{DataTemplate local:DashboardPage}"
     Route="TestPage" 
            Icon="dotnet_bot.png" />
        <ShellContent
     Title="Student Information"
     ContentTemplate="{DataTemplate local:DashboardPage}"
     Route="TestPage" 
             Icon="dotnet_bot.png"/>
        <ShellContent
     Title="Faculty Evaluation"
     ContentTemplate="{DataTemplate local:DashboardPage}"
     Route="TestPage" 
             Icon="dotnet_bot.png"/>
        <ShellContent
     Title="Calendar of Events"
     ContentTemplate="{DataTemplate local:DashboardPage}"
     Route="TestPage"
             Icon="dotnet_bot.png"/>
        <ShellContent
     Title="Announcement Feed"
     ContentTemplate="{DataTemplate local:DashboardPage}"
     Route="TestPage"
             Icon="dotnet_bot.png"/>
    </FlyoutItem>
</Shell>    
