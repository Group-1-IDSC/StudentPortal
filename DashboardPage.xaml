                            <Label Text="Assessment" TextColor="#616161" FontSize="14" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Grid>
                    <!-- Student Information Section -->
                    <VerticalStackLayout Grid.Row="2" x:Name="StudentInfoSection" IsVisible="True">

