                        </HorizontalStackLayout>
                    </Grid>

                    <Grid Grid.Row="5" BackgroundColor="Transparent">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementFeedTapped" />
                        </Grid.GestureRecognizers>

